{
  "name": "circleci",
  "displayName": "CircleCI",
  "description": "Monitor, manage, and inspect your Pipelines on CircleCI",
  "version": "0.2.2",
  "license": "MIT",
  "publisher": "jodyh",
  "preview": true,
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jodyheavener/circleci-vscode.git"
  },
  "homepage": "https://github.com/jodyheavener/circleci-vscode",
  "engines": {
    "vscode": "^1.64.0",
    "node": "^16.12.0"
  },
  "scripts": {
    "build": "NODE_ENV=production yarn compile",
    "compile": "node -r esbuild-register compile.ts",
    "format": "eslint src/**/*.ts --fix && prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts && prettier --check src/**/*.ts",
    "test": "jest",
    "vscode:prepublish": "yarn build",
    "watch": "yarn compile --watch"
  },
  "icon": "dist/assets/logo.png",
  "keywords": [
    "continuous integration",
    "circle ci",
    "CI/CD"
  ],
  "galleryBanner": {
    "color": "#161616",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:circleciPipelinesTree",
    "workspaceContains:circle.yaml",
    "workspaceContains:circle.yml",
    "workspaceContains:.circleci/config.yaml",
    "workspaceContains:.circleci/config.yml"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "circleciContainer",
          "title": "CircleCI",
          "icon": "./dist/assets/dark/circleci-logo.svg"
        }
      ]
    },
    "views": {
      "circleciContainer": [
        {
          "id": "circleciPipelinesTree",
          "name": "Pipelines"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == circleciPipelinesTree",
          "command": "circleci.openPage",
          "group": "navigation"
        },
        {
          "when": "view == circleciPipelinesTree",
          "command": "circleci.refetch",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "viewItem =~ /circleciBranch/ || viewItem =~ /circleciPipeline/ || viewItem =~ /circleciWorkflow/ || viewItem =~ /circleciJob/",
          "command": "circleci.refetch",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciBranch/ || viewItem =~ /circleciPipeline/ || viewItem =~ /circleciWorkflow/ || viewItem =~ /circleciJob(?::?\\w*)(?::build)/",
          "command": "circleci.openPage",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciWorkflow(?::?\\w*)(?::running)/",
          "command": "circleci.cancelWorkflow",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciJob(?::?\\w*)(?::build)(?::?\\w*)(?::running)/",
          "command": "circleci.cancelJob",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciJob(?::?\\w*)(?::approval)/",
          "command": "circleci.approveJob",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciWorkflow/",
          "command": "circleci.retryWorkflowAll",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciWorkflow(?::?\\w*)(?::failed)/",
          "command": "circleci.retryWorkflowFailed",
          "group": "inline"
        },
        {
          "when": "viewItem =~ /circleciPipeline/ || viewItem =~ /circleciWorkflow/ || viewItem =~ /circleciJob/",
          "command": "circleci.copyId",
          "group": "circleci"
        },
        {
          "when": "viewItem =~ /circleciPipeline/ || viewItem =~ /circleciJob(?::?\\w*)(?::build)/",
          "command": "circleci.copyNumber",
          "group": "circleci"
        }
      ]
    },
    "commands": [
      {
        "command": "circleci.refetch",
        "title": "Refetch details",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/rotate.svg",
          "light": "./dist/assets/light/rotate.svg"
        }
      },
      {
        "command": "circleci.openPage",
        "title": "Open in browser",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/open.svg",
          "light": "./dist/assets/light/open.svg"
        }
      },
      {
        "command": "circleci.cancelWorkflow",
        "title": "Cancel workflow",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/ex.svg",
          "light": "./dist/assets/light/ex.svg"
        }
      },
      {
        "command": "circleci.cancelJob",
        "title": "Cancel job",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/ex.svg",
          "light": "./dist/assets/light/ex.svg"
        }
      },
      {
        "command": "circleci.approveJob",
        "title": "Approve job",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/play.svg",
          "light": "./dist/assets/light/play.svg"
        }
      },
      {
        "command": "circleci.retryWorkflowAll",
        "title": "Retry all jobs",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/retry-all.svg",
          "light": "./dist/assets/light/retry-all.svg"
        }
      },
      {
        "command": "circleci.retryWorkflowFailed",
        "title": "Retry failed jobs",
        "category": "CircleCI",
        "icon": {
          "dark": "./dist/assets/dark/retry-failed.svg",
          "light": "./dist/assets/light/retry-failed.svg"
        }
      },
      {
        "command": "circleci.copyId",
        "title": "Copy ID",
        "category": "CircleCI"
      },
      {
        "command": "circleci.copyNumber",
        "title": "Copy number",
        "category": "CircleCI"
      },
      {
        "command": "circleci.viewJobTests",
        "title": "View job tests",
        "category": "CircleCI"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "General",
        "id": "general",
        "order": 0,
        "properties": {
          "circleci.apiToken": {
            "order": 0,
            "type": "string",
            "default": null,
            "markdownDescription": "A CircleCI API Token. This can be generated on your [Personal API Tokens](https://app.circleci.com/settings/user/tokens) page."
          },
          "circleci.pipelines.reloadInterval": {
            "order": 1,
            "type": "number",
            "default": 120,
            "minimum": 0,
            "markdownDescription": "Number of seconds to wait before refetching details for all pipelines. This will load in any new workflows.\n\rSet to `0` to disable."
          },
          "circleci.workflows.autoLoad": {
            "order": 2,
            "type": "boolean",
            "default": true,
            "description": "Automatically load workflows. Disabling this can help with API rate limiting."
          },
          "circleci.workflows.reloadInterval": {
            "order": 3,
            "type": "number",
            "default": 10,
            "minimum": 0,
            "markdownDescription": "Number of seconds to wait before refetching an active workflow's status.\n\rSet to `0` to disable."
          },
          "circleci.jobs.autoLoad": {
            "order": 4,
            "type": "boolean",
            "default": true,
            "description": "Automatically load jobs. Disabling this can help with API rate limiting."
          }
        }
      },
      {
        "type": "object",
        "title": "Project",
        "id": "project",
        "order": 1,
        "properties": {
          "circleci.project.gitRemote": {
            "order": 0,
            "type": "string",
            "default": "origin",
            "markdownDescription": "The remote to use when retrieving Git data."
          },
          "circleci.project.useGitBranches": {
            "order": 1,
            "type": "boolean",
            "default": false,
            "description": "By default we'll show you all pipelines for your project, but with this option enabled we'll show you pipelines by Git branches."
          },
          "circleci.project.branchesToWatch": {
            "order": 2,
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "main"
            ],
            "markdownDescription": "Requires **Use Git Branches** to be enabled. You'll always see the pipelines for the currently checked-out branch (â˜…), but you can watch any additional branches by adding them here."
          }
        }
      }
    ]
  },
  "dependencies": {
    "circle-client": "^0.2.0",
    "follow-redirects": "^1.14.7",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "react-string-replace": "^0.4.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/copy": "^0.3.2",
    "@types/follow-redirects": "^1.14.0",
    "@types/jest": "^27.4.0",
    "@types/node": "16.x",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "copy": "^0.3.2",
    "esbuild": "^0.14.18",
    "esbuild-plugin-svg": "^0.1.0",
    "esbuild-register": "^3.3.2",
    "esbuild-sass-plugin": "^2.2.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.0",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "watch-glob": "^0.1.3"
  }
}
